<div class="container">
    <div class="row">
        <div class="col-md-6 offset-3">
            <h2 class="text-center">Add Contact Form</h2>

            <% if (typeof comments != 'undefined') { %>
                <div class="alert alert-danger mt-4" role="alert">
                    <ul>
                        <% comments.forEach(error => { %>
                            <li><%= error.msg %></li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>

            <form method="POST" action="/contact" class="mt-4">
                <div class="mb-3">
                  <label for="" class="form-label">Name</label>
                  <input type="text" class="form-control"  name="nama" required>
                </div>
                <div class="mb-3">
                  <label for="" class="form-label">Email</label>
                  <input type="email" class="form-control"  name="email" required>
                </div>
                <div class="mb-3">
                  <label for="" class="form-label">Phone Number</label>
                  <input type="number" class="form-control"  name="nohp" required>
                </div>
                <a href="/contact" class="btn btn-danger">Cancel</a>
                <button type="submit" class="btn btn-primary">Save</button>
              </form>
        </div>
    </div>
</div>